<div class="category @(IsSelected ? "selected":"")" @onclick="Select">
	<div class="name">@ThisCategory.Title</div>
	<div class="item-count">0 items</div>
</div>

@code {
	[Parameter]
	public EventCallback<int> OnSelect { get; set; }

	[Parameter]
	public bool IsSelected { get; set; }

	[Parameter]
	public required Models.Category ThisCategory { get; set; }

	private async Task Select()
	{
		await OnSelect.InvokeAsync(ThisCategory.Id);
	}
}
